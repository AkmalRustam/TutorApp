<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/question_view_background"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:background="@drawable/tv_number_of_questions_background"
        android:fontFamily="@font/sf_pro_display_medium"
        android:paddingHorizontal="12dp"
        android:paddingVertical="8dp"
        android:text="2/15"
        android:textColor="@color/black_custom"
        android:textSize="18sp"
        tools:ignore="HardcodedText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/sf_pro_display_medium"
        android:text="Savol №2"
        android:textSize="20sp"
        tools:ignore="HardcodedText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/sf_pro_display_medium"
        android:text="Ijara uy manzili mahallasini tanlang"
        android:textColor="@color/gray"
        android:textSize="16sp"
        tools:ignore="HardcodedText" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="24dp"
        android:layout_weight="1"
        android:clipToPadding="false"
        android:fadeScrollbars="false"
        android:scrollbarSize="2dp"
        android:scrollbarThumbVertical="@color/gray"
        android:scrollbars="vertical">

        <RadioGroup
            android:id="@+id/rg_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.google.android.material.radiobutton.MaterialRadioButton
                android:id="@+id/rb_first"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sf_pro_display_medium"
                android:text="№1 «Botanika bag‘i», 2-sektor"
                android:textColor="@color/black_custom"
                android:textSize="16sp"
                app:buttonTint="@color/black_custom"
                tools:ignore="HardcodedText" />

            <com.google.android.material.radiobutton.MaterialRadioButton
                android:id="@+id/rb_second"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sf_pro_display_medium"
                android:text="№2 «Hawa jollari», 2-sektor"
                android:textColor="@color/black_custom"
                android:textSize="16sp"
                app:buttonTint="@color/black_custom"
                tools:ignore="HardcodedText" />

            <com.google.android.material.radiobutton.MaterialRadioButton
                android:id="@+id/rb_third"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sf_pro_display_medium"
                android:text="№3 «Aydin jol», 2-sektor"
                android:textColor="@color/black_custom"
                android:textSize="16sp"
                app:buttonTint="@color/black_custom"
                tools:ignore="HardcodedText" />

            <com.google.android.material.radiobutton.MaterialRadioButton
                android:id="@+id/rb_fourth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sf_pro_display_medium"
                android:text="№4 «Shimbay chayxana», 2-sektor"
                android:textColor="@color/black_custom"
                android:textSize="16sp"
                app:buttonTint="@color/black_custom"
                tools:ignore="HardcodedText" />

            <com.google.android.material.radiobutton.MaterialRadioButton
                android:id="@+id/rb_fifth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sf_pro_display_medium"
                android:text="№5 «Xaliqlar doslig‘i», 3-sektor"
                android:textColor="@color/black_custom"
                android:textSize="16sp"
                app:buttonTint="@color/black_custom"
                tools:ignore="HardcodedText" />

            <com.google.android.material.radiobutton.MaterialRadioButton
                android:id="@+id/rb_sixth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sf_pro_display_medium"
                android:text="№6 «Shig‘is», 2-sektor"
                android:textColor="@color/black_custom"
                android:textSize="16sp"
                app:buttonTint="@color/black_custom"
                tools:ignore="HardcodedText" />

            <com.google.android.material.radiobutton.MaterialRadioButton
                android:id="@+id/rb_seventh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sf_pro_display_medium"
                android:text="№7 «Shayirlar awili», 3-sektor"
                android:textColor="@color/black_custom"
                android:textSize="16sp"
                app:buttonTint="@color/black_custom"
                tools:ignore="HardcodedText" />

            <com.google.android.material.radiobutton.MaterialRadioButton
                android:id="@+id/rb_eighth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sf_pro_display_medium"
                android:text="№8 «Tinishliq», 3-sektor"
                android:textColor="@color/black_custom"
                android:textSize="16sp"
                app:buttonTint="@color/black_custom"
                tools:ignore="HardcodedText" />

            <com.google.android.material.radiobutton.MaterialRadioButton
                android:id="@+id/rb_ninth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sf_pro_display_medium"
                android:text="№9 «Dosliq», 3-sektor"
                android:textColor="@color/black_custom"
                android:textSize="16sp"
                app:buttonTint="@color/black_custom"
                tools:ignore="HardcodedText" />

            <com.google.android.material.radiobutton.MaterialRadioButton
                android:id="@+id/rb_tenth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sf_pro_display_medium"
                android:text="№10 «Sarbinaz», 3-sektor"
                android:textColor="@color/black_custom"
                android:textSize="16sp"
                app:buttonTint="@color/black_custom"
                tools:ignore="HardcodedText" />

        </RadioGroup>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>